{
    "compilerOptions": {
        "target": "es5",
        "module": "umd",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "../build"
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "files": [
        "basefilesystem.i.ts",
        "dependument.manager.ts",
        "dependument.ts",
        "filesystem/filesystem.i.ts",
        "filesystem/filesystem.ts",
        "templates/template.ts",
        "templates/templatefilesystem.i.ts",
        "templates/templatefilesystem.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
